From f78d4093e94b34b979cf6fe1309f707fbbdc8e49 Mon Sep 17 00:00:00 2001
From: Ranjan Dutta <ranjan.dutta@intel.com>
Date: Tue, 6 Jul 2021 18:16:11 +0800
Subject: [PATCH 13/45] Revert "drm/sun4i: dw-hdmi: Make HDMI PHY into a
 platform device"

This reverts commit 360609fc8b06e8b1d5925ec4d99d752bbbd2d9dd.
---
 drivers/gpu/drm/sun4i/sun8i_dw_hdmi.c  | 31 +++----------------
 drivers/gpu/drm/sun4i/sun8i_dw_hdmi.h  |  5 ++--
 drivers/gpu/drm/sun4i/sun8i_hdmi_phy.c | 41 ++++----------------------
 3 files changed, 11 insertions(+), 66 deletions(-)

diff --git a/drivers/gpu/drm/sun4i/sun8i_dw_hdmi.c b/drivers/gpu/drm/sun4i/sun8i_dw_hdmi.c
index f75fb157f2ff7..bbdfd5e26ec88 100644
--- a/drivers/gpu/drm/sun4i/sun8i_dw_hdmi.c
+++ b/drivers/gpu/drm/sun4i/sun8i_dw_hdmi.c
@@ -209,7 +209,7 @@ static int sun8i_dw_hdmi_bind(struct device *dev, struct device *master,
 		goto err_disable_clk_tmds;
 	}
 
-	ret = sun8i_hdmi_phy_get(hdmi, phy_node);
+	ret = sun8i_hdmi_phy_probe(hdmi, phy_node);
 	of_node_put(phy_node);
 	if (ret) {
 		dev_err(dev, "Couldn't get the HDMI PHY\n");
@@ -242,6 +242,7 @@ static int sun8i_dw_hdmi_bind(struct device *dev, struct device *master,
 
 cleanup_encoder:
 	drm_encoder_cleanup(encoder);
+	sun8i_hdmi_phy_remove(hdmi);
 err_disable_clk_tmds:
 	clk_disable_unprepare(hdmi->clk_tmds);
 err_assert_ctrl_reset:
@@ -262,6 +263,7 @@ static void sun8i_dw_hdmi_unbind(struct device *dev, struct device *master,
 	struct sun8i_dw_hdmi *hdmi = dev_get_drvdata(dev);
 
 	dw_hdmi_unbind(hdmi->hdmi);
+	sun8i_hdmi_phy_remove(hdmi);
 	clk_disable_unprepare(hdmi->clk_tmds);
 	reset_control_assert(hdmi->rst_ctrl);
 	gpiod_set_value(hdmi->ddc_en, 0);
@@ -318,32 +320,7 @@ static struct platform_driver sun8i_dw_hdmi_pltfm_driver = {
 		.of_match_table = sun8i_dw_hdmi_dt_ids,
 	},
 };
-
-static int __init sun8i_dw_hdmi_init(void)
-{
-	int ret;
-
-	ret = platform_driver_register(&sun8i_dw_hdmi_pltfm_driver);
-	if (ret)
-		return ret;
-
-	ret = platform_driver_register(&sun8i_hdmi_phy_driver);
-	if (ret) {
-		platform_driver_unregister(&sun8i_dw_hdmi_pltfm_driver);
-		return ret;
-	}
-
-	return ret;
-}
-
-static void __exit sun8i_dw_hdmi_exit(void)
-{
-	platform_driver_unregister(&sun8i_dw_hdmi_pltfm_driver);
-	platform_driver_unregister(&sun8i_hdmi_phy_driver);
-}
-
-module_init(sun8i_dw_hdmi_init);
-module_exit(sun8i_dw_hdmi_exit);
+module_platform_driver(sun8i_dw_hdmi_pltfm_driver);
 
 MODULE_AUTHOR("Jernej Skrabec <jernej.skrabec@siol.net>");
 MODULE_DESCRIPTION("Allwinner DW HDMI bridge");
diff --git a/drivers/gpu/drm/sun4i/sun8i_dw_hdmi.h b/drivers/gpu/drm/sun4i/sun8i_dw_hdmi.h
index 74f6ed0e25709..d4b55af0592f8 100644
--- a/drivers/gpu/drm/sun4i/sun8i_dw_hdmi.h
+++ b/drivers/gpu/drm/sun4i/sun8i_dw_hdmi.h
@@ -195,15 +195,14 @@ struct sun8i_dw_hdmi {
 	struct gpio_desc		*ddc_en;
 };
 
-extern struct platform_driver sun8i_hdmi_phy_driver;
-
 static inline struct sun8i_dw_hdmi *
 encoder_to_sun8i_dw_hdmi(struct drm_encoder *encoder)
 {
 	return container_of(encoder, struct sun8i_dw_hdmi, encoder);
 }
 
-int sun8i_hdmi_phy_get(struct sun8i_dw_hdmi *hdmi, struct device_node *node);
+int sun8i_hdmi_phy_probe(struct sun8i_dw_hdmi *hdmi, struct device_node *node);
+void sun8i_hdmi_phy_remove(struct sun8i_dw_hdmi *hdmi);
 
 void sun8i_hdmi_phy_init(struct sun8i_hdmi_phy *phy);
 void sun8i_hdmi_phy_set_ops(struct sun8i_hdmi_phy *phy,
diff --git a/drivers/gpu/drm/sun4i/sun8i_hdmi_phy.c b/drivers/gpu/drm/sun4i/sun8i_hdmi_phy.c
index c9239708d398c..9994edf675096 100644
--- a/drivers/gpu/drm/sun4i/sun8i_hdmi_phy.c
+++ b/drivers/gpu/drm/sun4i/sun8i_hdmi_phy.c
@@ -5,7 +5,6 @@
 
 #include <linux/delay.h>
 #include <linux/of_address.h>
-#include <linux/of_platform.h>
 
 #include "sun8i_dw_hdmi.h"
 
@@ -598,30 +597,10 @@ static const struct of_device_id sun8i_hdmi_phy_of_table[] = {
 	{ /* sentinel */ }
 };
 
-int sun8i_hdmi_phy_get(struct sun8i_dw_hdmi *hdmi, struct device_node *node)
-{
-	struct platform_device *pdev = of_find_device_by_node(node);
-	struct sun8i_hdmi_phy *phy;
-
-	if (!pdev)
-		return -EPROBE_DEFER;
-
-	phy = platform_get_drvdata(pdev);
-	if (!phy)
-		return -EPROBE_DEFER;
-
-	hdmi->phy = phy;
-
-	put_device(&pdev->dev);
-
-	return 0;
-}
-
-static int sun8i_hdmi_phy_probe(struct platform_device *pdev)
+int sun8i_hdmi_phy_probe(struct sun8i_dw_hdmi *hdmi, struct device_node *node)
 {
 	const struct of_device_id *match;
-	struct device *dev = &pdev->dev;
-	struct device_node *node = dev->of_node;
+	struct device *dev = hdmi->dev;
 	struct sun8i_hdmi_phy *phy;
 	struct resource res;
 	void __iomem *regs;
@@ -725,7 +704,7 @@ static int sun8i_hdmi_phy_probe(struct platform_device *pdev)
 		clk_prepare_enable(phy->clk_phy);
 	}
 
-	platform_set_drvdata(pdev, phy);
+	hdmi->phy = phy;
 
 	return 0;
 
@@ -749,9 +728,9 @@ static int sun8i_hdmi_phy_probe(struct platform_device *pdev)
 	return ret;
 }
 
-static int sun8i_hdmi_phy_remove(struct platform_device *pdev)
+void sun8i_hdmi_phy_remove(struct sun8i_dw_hdmi *hdmi)
 {
-	struct sun8i_hdmi_phy *phy = platform_get_drvdata(pdev);
+	struct sun8i_hdmi_phy *phy = hdmi->phy;
 
 	clk_disable_unprepare(phy->clk_mod);
 	clk_disable_unprepare(phy->clk_bus);
@@ -765,14 +744,4 @@ static int sun8i_hdmi_phy_remove(struct platform_device *pdev)
 	clk_put(phy->clk_pll1);
 	clk_put(phy->clk_mod);
 	clk_put(phy->clk_bus);
-	return 0;
 }
-
-struct platform_driver sun8i_hdmi_phy_driver = {
-	.probe  = sun8i_hdmi_phy_probe,
-	.remove = sun8i_hdmi_phy_remove,
-	.driver = {
-		.name = "sun8i-hdmi-phy",
-		.of_match_table = sun8i_hdmi_phy_of_table,
-	},
-};
-- 
2.25.1

