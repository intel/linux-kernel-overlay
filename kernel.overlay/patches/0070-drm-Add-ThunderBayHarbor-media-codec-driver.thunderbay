+int get_devicecorenum(u32 deviceid, device_coretype type)
+{
+	struct device_info *hdr = get_deviceinfo(deviceid);
+
+	if (!hdr)
+		return 0;
+
+	switch (type) {
+	case CORE_ENC:
+		return hdr->enccore_num;
+	case CORE_DEC:
+		return hdr->deccore_num;
+	case CORE_CACHE:
+		return hdr->cachecore_num;
+	case CORE_DEC400:
+		return hdr->dec400core_num;
+	default:
+		return 0;
+	}
+}
