+
+#define CREATE_TRACE_POINTS
+#include "trace.h"
+
+void __trace_hantro_msg(const char *fmt, ...)
+{
+	struct va_format vaf = {
+		.fmt = fmt,
+	};
+	va_list args;
+
+	va_start(args, fmt);
+	vaf.va = &args;
+
+	trace_hantro_msg(&vaf);
+	va_end(args);
+}
+
+void __trace_hantro_err(const char *fmt, ...)
+{
+	struct va_format vaf = {
+		.fmt = fmt,
+	};
+	va_list args;
+
+	va_start(args, fmt);
+	vaf.va = &args;
+
+	trace_hantro_err(&vaf);
+	va_end(args);
+}
