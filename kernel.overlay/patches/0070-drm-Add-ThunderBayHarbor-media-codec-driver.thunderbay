+int hantrodec_cleanup(void)
+{
+	if (hantro_drm.dec_page_lut_regs) {
+		iounmap((void *)hantro_drm.dec_page_lut_regs);
+		hantro_drm.dec_page_lut_regs = NULL;
+		release_mem_region(KMB_VC8000D_PAGE_LUT, 0x100);
+	}
+
+	return 0;
