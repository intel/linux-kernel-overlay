+static struct platform_driver hantro_drm_platform_driver = {
+	.probe = hantro_drm_probe,
+	.remove = hantro_drm_remove,
+	.driver = {
+			.name = DRIVER_NAME,
+			.owner = THIS_MODULE,
+			.of_match_table = hantro_of_match,
+			.pm = &hantro_pm_ops,
+		},
+	.id_table = hantro_drm_platform_ids,
+};
