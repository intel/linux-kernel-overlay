 	if (sdev->msi_enabled)
 		pci_free_irq_vectors(pci);
@@ -1231,7 +1269,9 @@ int hda_dsp_remove(struct snd_sof_dev *sdev)
 
 	hda_bus_ml_free(sof_to_bus(sdev));
 
