 	dp->drm_dev = drm;
 	dp->aux->drm_dev = drm;
@@ -1294,6 +1294,8 @@ static int dp_display_probe(struct platform_device *pdev)
 	dp->name = "drm_dp";
 	dp->dp_display.connector_type = desc->connector_type;
 	dp->wide_bus_en = desc->wide_bus_en;
+	dp->dp_display.is_edp =
